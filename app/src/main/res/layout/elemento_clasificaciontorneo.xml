<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/logotorneo" />

        <TextView
            android:id="@+id/nombreequipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/p"
            tools:text="Nombre" />
        <TextView
            android:id="@+id/partidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/p"
            tools:text="P" />
        <TextView
            android:id="@+id/partidosjugados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/p"
            tools:text="PJ" />
        <TextView
            android:id="@+id/partidosganados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/p"
            tools:text="PG" />
        <TextView
            android:id="@+id/partidosempatados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/p"
            tools:text="PE" />
        <TextView
            android:id="@+id/partidosperdidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/p"
            tools:text="PP" />
        <TextView
            android:id="@+id/partidosf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/p"
            tools:text="F" />
        <TextView
            android:id="@+id/partidosc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/p"
            tools:text="C" />
        <TextView
            android:id="@+id/partidosd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            app:layout_constraintLeft_toRightOf="@+id/imagen"
            app:layout_constraintTop_toBottomOf="@+id/p"
            tools:text="D" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
